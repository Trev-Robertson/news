<h1><%= link_to @article.title, @article.url %></h1>

<% if current_user.articles.include?(@article) %>
    <%= button_to "Unfavorite Article", favorite_delete_path, "method" => :delete %>
<% else %>
    <%= button_to "Favorite Article", '/favorites', params: {:favorite => {article_id: @article.id}} %>
<% end %>
<br>
<br>

<img src="<%= @article.img_url %>" alt="<%= @article.title %>" width="500">

<h4><%= @article.blurb %></h4>

<h2>People who have favorited this article</h2>

<% @article.users.each do |user| %>
    <li><%= link_to user.username, user_path(user) %></li>
<% end %>
